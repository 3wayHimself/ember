<?xml version = '1.0' encoding = 'UTF-8'?>
<models>

	<model name="fire">
		<particlesystems>
			<particlesystem script="/global/particles/smoke">
				<bindings>
					<binding emittervar="emission_rate" atlasattribute="status" />
				</bindings>
			</particlesystem>
		</particlesystems>
        <lights>
            <light type="point">
                 <diffusecolour r="0.8" g="0.7" b="0.25" />
                 <specularcolour r="0.8" g="0.7" b="0.25" />
                 <attenuation range="500" constant="1" linear="0" quadratic="0.01" />
                 <position x="0" y="1" z="0" />
            </light>
        </lights>
	</model>	

	<model name="sun">
		<submodels>
			<submodel mesh="3d_objects/primitives/models/sphere.mesh" >
				<parts>
					<part name="main" show="true" />
				</parts>
			</submodel>
		</submodels>
	</model>
	
</models>
