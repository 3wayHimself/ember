<?xml version = '1.0' encoding = 'UTF-8'?>
<models>

	<model name="barrel" usescaleof="height"  >
		<translate x="0.000000" y="1.000000" z="0.000000" />
		<submodels>
			<submodel mesh="3d_objects/items/cylinder/models/barrel/cylinder_barrel_closed.mesh" >
			<parts>
				<part name="main" show="true" />
			</parts>
			</submodel>
		</submodels>
	</model>


	<model name="coin" usescaleof="none" scale="5"  >
		<submodels>
			<submodel mesh="3d_objects/items/coin/models/lowpoly_coin/lowpoly_coin.mesh" >
				<parts>
					<part name="main" show="true" />
				</parts>
			</submodel>
		</submodels>
	</model>			
	
	<model name="torch" usescaleof="none" scale="1">
		<submodels>
			<submodel mesh="3d_objects/items/tool/models/torch/torch.mesh" >
				<parts>
					<part name="main" show="true" />
				</parts>
			</submodel>
		</submodels>
	</model>			
	
	<model name="deed" usescaleof="none" scale="0.5" >
		<submodels>
			<submodel mesh="3d_objects/items/sheet/models/curly_document/curly_document.mesh">
				<parts>
					<part name="main" show="true" />
				</parts>
			</submodel>
		</submodels>
	</model>	
	
	<model name="bottle" usescaleof="all" showcontained="true">
		<translate x="0.000000" y="0.000000" z="0.000000" />
		<rotation x="1.000000" y="1.000000" z="1.000000" degrees="0.000000" />
		<submodels>
			<submodel mesh="3d_objects/items/cylinder/models/bottle/simple_bottle.mesh">
				<parts>
					<part name="main" show="true">
						<subentities>
							<subentity index="0" material="/global/items/cylinder/earthenware" />
							<subentity index="1" material="/global/items/cylinder/earthenware" />
						</subentities>
					</part>
				</parts>
			</submodel>
		</submodels>
		<actions />
	</model>
	
	<model name="shirt" usescaleof="all" showcontained="true">
		<translate x="0.000000" y="0.000000" z="0.000000" />
		<rotation x="1.000000" y="0.000000" z="0.000000" degrees="0.000000" />
		<submodels>
			<submodel mesh="3d_objects/clothes/dress/models/folded/folded_shirt.mesh">
				<parts>
					<part name="clothes/burlap" show="true" group="main">
						<subentities>
							<subentity index="0" material="/global/clothes/dress/burlap" />
						</subentities>
					</part>
					<part name="clothes/ragged" show="false" group="main">
						<subentities>
							<subentity index="0" material="/global/clothes/dress/ragged" />
						</subentities>
					</part>
					<part name="clothes/dark_rags" show="false" group="main">
						<subentities>
							<subentity index="0" material="/global/clothes/dress/dark_rags" />
						</subentities>
					</part>
					<part name="clothes/sun" show="false" group="main">
						<subentities>
							<subentity index="0" material="/global/clothes/dress/sun" />
						</subentities>
					</part>
					<part name="clothes/fine" show="false" group="main">
						<subentities>
							<subentity index="0" material="/global/clothes/dress/fine" />
						</subentities>
					</part>
				</parts>
			</submodel>
		</submodels>
		<actions />
	</model>
	
	<model name="pants" usescaleof="all" showcontained="true">
		<translate x="0.000000" y="0.000000" z="0.000000" />
		<rotation x="1.000000" y="0.000000" z="0.000000" degrees="0.000000" />
		<submodels>
			<submodel mesh="3d_objects/clothes/dress/models/folded/folded_pants.mesh">
				<parts>
					<part name="main" show="true">
						<subentities>
							<subentity index="0" material="/global/clothes/dress/burlap" />
						</subentities>
					</part>
				</parts>
			</submodel>
		</submodels>
		<actions />
	</model>
	
	<!-- temporary model for wood; we need a better model which has the grain of the planks in the top and bottom faces -->
	<model name="wood" usescaleof="all" showcontained="true">
		<translate x="0.000000" y="0.000000" z="0.000000" />
		<rotation x="1.000000" y="0.000000" z="0.000000" degrees="0.000000" />
		<submodels>
			<submodel mesh="placeholder.mesh">
				<parts>
					<part name="main" show="true">
						<subentities>
							<subentity index="0" material="/global/items/wood_weathered/boards" />
						</subentities>
					</part>
				</parts>
			</submodel>
		</submodels>
		<actions />
    </model>

</models>
