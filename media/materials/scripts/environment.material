material /global/fire
{
    technique
    {
        pass
        {
           cull_hardware none 
           cull_software none
          scene_blend alpha_blend 
		alpha_rejection greater_equal 128            
           texture_unit
            {
                texture 3d_objects/items/fire/textures/flame/low/flame.png
	    	}
        }
    }
}

