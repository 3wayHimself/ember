material /global/ember/terraindecal
{
	technique
	{
		pass
		{
			ambient 1 1 1
			diffuse 1 1 1
			lighting off
			scene_blend alpha_blend 
			fog_override true
			depth_bias 16
			texture_unit
			{
				tex_address_mode border
				tex_border_colour 0.0 0.0 0.0 0.0 
				texture terraindecal.png
			}
		}
	}
}

