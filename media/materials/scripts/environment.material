material /global/environment/sun/flare
{
        technique
        {
                pass
                {
                        lighting off
                        scene_blend add
                        depth_write off
						fog_override true
						
                        texture_unit
                        {
                                texture flare.png
                        }
                }
        }
}

material /global/environment/lensflare/halo
{
   technique
   {
       pass
       {
           ambient 1 1 1
           diffuse 1 1 1
           lighting off
           depth_write off
			depth_check off
           scene_blend add
			fog_override true
          texture_unit
           {
               texture lensflare6.jpg
           }
       }
   }
}


