material /global/environment/sky/day
{
	technique
	{
		pass
		{
			lighting off
			depth_write off
			fog_override true
			texture_unit
			{
				cubic_texture skies/waterworld09.jpg separateUV
				tex_address_mode clamp
			}
		}
	}
} 


material /global/environment/water/simple
{
        technique
        {
                pass
                {
                        //ambient 0.3 0.3 0.3
                        scene_blend modulate
                        cull_hardware none
                        cull_software none
						//depth_bias 1
						//depth_write off
						lighting off			
                        texture_unit
                        {
                                texture water.png
                                scroll_anim 0.01 0.01
                        }
                }
        }


}






